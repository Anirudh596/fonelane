{
  "kind": "collectionType",
  "collectionName": "devices",
  "info": {
    "singularName": "device",
    "pluralName": "devices",
    "displayName": "Device",
    "description": ""
  },
  "options": {
    "draftAndPublish": true
  },
  "pluginOptions": {},
  "attributes": {
    "title": {
      "type": "string",
      "required": true,
      "unique": true,
      "maxLength": 70,
      "minLength": 3,
      "private": true
    },
    "dUrl": {
      "type": "uid",
      "targetField": "title",
      "required": true
    },
    "mainimage": {
      "type": "media",
      "multiple": false,
      "required": true,
      "private": true,
      "allowedTypes": [
        "images"
      ]
    },
    "otherimages": {
      "type": "media",
      "multiple": true,
      "required": true,
      "private": true,
      "allowedTypes": [
        "images",
        "videos"
      ]
    },
    "price": {
      "type": "integer",
      "required": true,
      "unique": false,
      "private": true,
      "min": 100
    },
    "condition": {
      "type": "enumeration",
      "enum": [
        "Fair",
        "Good",
        "Excellent"
      ],
      "default": "Fair",
      "required": true
    },
    "colorname": {
      "displayName": "Color",
      "type": "component",
      "repeatable": true,
      "component": "device-info.color",
      "required": true
    }
  }
}
